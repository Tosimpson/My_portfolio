<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_template_invoice" model="mail.template">
        <field name="name">Invoice Email</field>
        <field name="model_id" ref="model_sm_invoice"/>
        <field name="email_from">Komolafeezekieldare@gmail.com</field>
        <field name="email_to">${(object.contact_email) | safe}</field>
        <field name="subject">Invoice ${object.invoice_number}</field>
        <field name="body_html"><![CDATA[
            <p>Dear ${object.student_id.name},</p>
            <p>Here is your invoice ${object.invoice_number}.</p>
            <p>Best regards,</p>
            <p>${object.user_id.name}</p>
        ]]></field>
        <field name="report_template" ref="school_management.report_invoice_template"/>
        <field name="report_name">${(object.invoice_number) + '_invoice'}</field>
    </record>
</odoo>

